@model List<BookCave.Models.ViewModels.WishlistViewModel>

@{
    ViewData["Title"] = "Óskalisti";
}
<div class="jumbotron">
    <h1>Óskalistinn þinn</h1>

    @if(@Model.Count() == 0)
    {
        <p>Óskalistinn þinn er tómur!</p>
    }
</div>

<ul>
    @foreach(var Item in @Model)
    {
        <li>
            <p>
                <h2>@Item.Title</h2>
                <a href="@Url.Action("MoveToCart", "Wishlist")?bookId=@Item.BookId"><button class="btn btn-primary">Færa bók í körfu</button></a>
                <a href="@Url.Action("Remove", "Wishlist")?bookId=@Item.BookId"><button class="btn btn-danger">Eyða bók af lista</button></a>
            </p>
        </li>
    }
</ul>