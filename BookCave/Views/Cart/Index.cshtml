@model List<BookCave.Models.ViewModels.CartViewModel>

@{float total = 0;
    @foreach(var price in @Model)
    {
        total += price.Price;
    }
}

<h1>Karfan Þín</h1>
<div style="width: 50%">
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Titill</th>
        <th>Verð</th>
        <th></th>
    </tr>
    @foreach(var Item in @Model)
    {
        <tr>
            <td>@Item.Id</td>
            <td>@Item.Title</td>
            <td>@Item.Price kr.</td>
            <td><a href="@Url.Action("Remove", "Cart")?bookId=@Item.Id">Eyða</a></td>
        </tr>
    }
    <tr>
        <td></td>
        <th>Heildarverð</th>
        <td>
            @total kr.
        </td>
        <td></td>
    </tr>
</table>
</div>
<button><a href="@Url.Action("Order", "Cart")?@total"></a>Ganga frá pöntun</button>