@model List<BookCave.Models.ViewModels.BookListViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@foreach(var Book in @Model)
{
    <div>
        <h2><a asp-controller="Book" asp-action="Details" asp-route-id="@Book.Id">@Book.Title</a></h2>
        <p>Útgáfuár: @Book.ReleaseYear</p>
        <p>Einkunn: @Book.Rating</p>
        <p>Höfundur: @Book.Author</p>
        <p>Bókaflokkur: @Book.Category</p>
        <p>ISBN: @Book.Isbn</p>
        <p>Verð: @Book.Price</p>
        <img src="@Book.CoverImage" alt="Book Cover">
        @if(SignInManager.IsSignedIn(User))
        {
            <button class="btn"><a href="@Url.Action("Add", "Cart")?bookId=@Book.Id">Bæta í körfu</a></button>
        }
    </div>
}
