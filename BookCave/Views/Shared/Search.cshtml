@model List<BookCave.Models.ViewModels.BookListViewModel>

<form asp-controller="Book" asp-action="Search" method="post">
    <input type="text" placeholder="Leitaðu að bók með nafni, höfund eða ISBN" name="search">
    <button type="submit">Leita</button>
</form>

@foreach(var Book in @Model)
{
    <div>
        <h2>@Book.Title</h2>
        <p>Útgáfuár: @Book.ReleaseYear</p>
        <p>Einkunn: @Book.Rating</p>
        <p>Höfundur: @Book.Author</p>
        <p>ISBN: @Book.Isbn</p>
        <img src="@Book.CoverImage" alt="Book Cover">
    </div>
}
