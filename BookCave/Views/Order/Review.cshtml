@model BookCave.Models.ViewModels.OrderViewModel
<h2>Staðfesting verður send á @Model.EmailAddress</h2>
@foreach(var Book in @Model.Books)
{
    <h3>@Book.Title</h3>
    <p>Verð: @Book.Price x @Book.Quantity</p>
}
<h3>Senda á: @Model.Address, @Model.PostalCode - @Model.Country</h3>

<a href="@Url.Action("Confirm", "Order")?confirm=true"><button>Staðfesta</button></a>
<a href="@Url.Action("Confirm", "Order")?confirm=false"><button>Hætta við pöntun</button></a>
