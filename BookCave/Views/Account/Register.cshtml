@model BookCave.Models.ViewModels.RegisterViewModel

<h1>Búa til aðgang</h1>
<form asp-action="Register" asp-controller="Account" class="form-horizontal">
    <div class="form-group">
        <label for="Email">Netfang</label>
        <input type="email" asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label for="Username">Notendanafn</label>
        <input type="text" asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label for="Password">Lykilorð</label>
        <input type="password" asp-for="Password" class="form-control" id="password">
    </div>
    <div class="form-group">
        <label for="Password">Lykilorð aftur</label>
        <input type="password" asp-for="Password" class="form-control" id="passwordAgain">
    </div>
    <div>
        <div id="checkPasswordMatch"></div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" >Staðfesta og innskrá</button>
    </div>
</form>