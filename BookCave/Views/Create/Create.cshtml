@model dynamic 

@{
    ViewData["Title"] = "Búa til bók";
}

<div>
    <h2>Create a new book</h2>
    <form asp-controller="Create" asp-action="Create" method="post">
        <div class="form-group">
        <input  type="text" placeholder="Titill bókar" name="title" class="form-control">
        <input type="number" placeholder="Útgáfu ár" name="year" class="form-control">
        <input type="number" placeholder="Einkunn" name="rating" class="form-control">
        <select placeholder="Höfundur" name="author" class="form-control">
            <option value="null">Veldu höfund</option>
            @foreach (var author in Model.Authors)  
            {  
                <option value="@author.Id">@author.Name</option>
            }  
        <input type="text" placeholder="ISBN" name="isbn" class="form-control">
        <select placeholder="Bókaflokkur" name="category" class="form-control">
            <option>Veldu bókaflokk</option>
            @foreach (var cato in Model.Categories)  
            {  
                <option value="@cato.Id">@cato.CategoryName</option>
            }  
        <input type="text" placeholder="Netslóð á mynd af bók" name="coverImage" class="form-control">
        <button type="submit">Bæta við</button>
        </div>
    </form>
</div>

