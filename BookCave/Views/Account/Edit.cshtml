@model BookCave.Models.ApplicationUser

@{
    ViewData["Title"] = "Breyta prófíl";
}

<div>
    <h2>Persónuupplýsingar</h2>
</div>
<div>
    <form asp-action="Edit" asp-controller="Account" class=form-horizontal method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Fullt nafn</label>
            <input type="text" asp-for="Name" placeholder="@Model.Name" class="form-control">
        </div>
        <div class="form-group">
            <label for="Address">Heimilsfang</label>
            <input type="text" asp-for="Address" placeholder="@Model.Address" class="form-control">
        </div>
        <div class="form-group">
            <label for="FavoriteBook">Uppáhalds bók</label>
            <input type="text" asp-for="FavoriteBook" placeholder="@Model.FavoriteBook" class="form-control">
        </div>
        <div class="form-group">
            <label for="Image">Mynd</label>
            <input type="text" asp-for="Image" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" >Vista upplýsingar</button>
        </div>
    </form>
</div>

